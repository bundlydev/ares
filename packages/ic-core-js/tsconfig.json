{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
}
