{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": ["client/**/*", "identity-providers/**/*"],
    "exclude": ["node_modules", "build"]
}
